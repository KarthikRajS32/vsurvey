rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // SuperAdmin collection - only superadmin can access
    match /superadmin/{superadminId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'superadmin@vsurvey.com';
      
      // Clients subcollection
      match /clients/{clientId} {
        allow read, write: if request.auth != null && 
          (request.auth.token.email == 'superadmin@vsurvey.com' || 
           request.auth.uid == clientId);
        
        // Client subcollections (surveys, questions, assignments)
        match /{subcollection}/{docId} {
          allow read, write: if request.auth != null && 
            (request.auth.token.email == 'superadmin@vsurvey.com' || 
             request.auth.uid == clientId);
          
          // Survey responses subcollection
          match /responses/{responseId} {
            allow read, write: if request.auth != null && 
              (request.auth.token.email == 'superadmin@vsurvey.com' || 
               request.auth.uid == clientId ||
               resource.data.user_email == request.auth.token.email);
          }
        }
      }
    }
    
    // Global users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.email == 'superadmin@vsurvey.com' ||
         resource.data.created_by == request.auth.token.email ||
         request.auth.uid == userId);
      allow delete: if request.auth != null && 
        (request.auth.token.email == 'superadmin@vsurvey.com' ||
         resource.data.created_by == request.auth.token.email);
    }
    
    // Survey responses collection (if using global collection)
    match /survey_responses/{responseId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email == 'superadmin@vsurvey.com' ||
         resource.data.user_email == request.auth.token.email ||
         resource.data.client_email == request.auth.token.email);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}